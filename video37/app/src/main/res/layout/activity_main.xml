<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/f_sandia"
                android:layout_width="match_parent"
                android:layout_height="@android:dimen/notification_large_icon_width"
                android:background="@android:color/holo_green_light"
                android:contentDescription="@string/Desc"
                android:onClick="Seleccion"
                app:srcCompat="@drawable/fruta_sandia" />

            <ImageButton
                android:id="@+id/f_platano"
                android:layout_width="match_parent"
                android:layout_height="@android:dimen/notification_large_icon_height"
                android:background="@android:color/holo_blue_bright"
                android:contentDescription="@string/Desc"
                android:onClick="Seleccion"
                app:srcCompat="@drawable/fruta_platano" />

            <ImageButton
                android:id="@+id/f_pera"
                android:layout_width="match_parent"
                android:layout_height="@android:dimen/notification_large_icon_width"
                android:background="@android:color/holo_green_light"
                android:contentDescription="@string/Desc"
                android:onClick="Seleccion"
                app:srcCompat="@drawable/fruta_pera" />

            <ImageButton
                android:id="@+id/f_papaya"
                android:layout_width="match_parent"
                android:layout_height="@android:dimen/notification_large_icon_width"
                android:background="@android:color/holo_blue_bright"
                android:contentDescription="@string/Desc"
                android:onClick="Seleccion"
                app:srcCompat="@drawable/fruta_papaya" />

            <ImageButton
                android:id="@+id/f_naranja"
                android:layout_width="match_parent"
                android:layout_height="@android:dimen/notification_large_icon_width"
                android:background="@android:color/holo_green_light"
                android:contentDescription="@string/Desc"
                android:onClick="Seleccion"
                app:srcCompat="@drawable/fruta_naranja" />

            <ImageButton
                android:id="@+id/f_manzana"
                android:layout_width="match_parent"
                android:layout_height="@android:dimen/notification_large_icon_height"
                android:background="@android:color/holo_blue_bright"
                android:contentDescription="@string/Desc"
                android:onClick="Seleccion"
                app:srcCompat="@drawable/fruta_manzana" />

            <ImageButton
                android:id="@+id/f_fresa"
                android:layout_width="match_parent"
                android:layout_height="@android:dimen/notification_large_icon_height"
                android:background="@android:color/holo_green_light"
                android:contentDescription="@string/Desc"
                android:onClick="Seleccion"
                app:srcCompat="@drawable/fruta_mandarina" />

            <ImageButton
                android:id="@+id/f_kiwi"
                android:layout_width="match_parent"
                android:layout_height="@android:dimen/notification_large_icon_height"
                android:background="@android:color/holo_blue_bright"
                android:contentDescription="@string/Desc"
                android:onClick="Seleccion"
                app:srcCompat="@drawable/fruta_kiwi" />

            <ImageButton
                android:id="@+id/f_mandarina"
                android:layout_width="match_parent"
                android:layout_height="@android:dimen/notification_large_icon_height"
                android:background="@android:color/holo_green_light"
                android:contentDescription="@string/Desc"
                android:onClick="Seleccion"
                app:srcCompat="@drawable/fruta_fresa" />

            <ImageButton
                android:id="@+id/f_frambuesa"
                android:layout_width="match_parent"
                android:layout_height="@android:dimen/notification_large_icon_height"
                android:background="@android:color/holo_blue_bright"
                android:contentDescription="@string/Desc"
                android:onClick="Seleccion"
                app:srcCompat="@drawable/fruta_frambuesa" />

            <ImageButton
                android:id="@+id/f_aguacate"
                android:layout_width="match_parent"
                android:layout_height="@android:dimen/notification_large_icon_height"
                android:background="@android:color/holo_green_light"
                android:contentDescription="@string/Desc"
                android:onClick="Seleccion"
                app:srcCompat="@drawable/fruta_aguacate" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>